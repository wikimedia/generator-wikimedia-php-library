{
	"name": "wikimedia/<%= slug %>",
	"description": "<%= description %>",
	"license": "<%= license %>",
	"homepage": "https://www.mediawiki.org/wiki/<%= name[0].toUpperCase() + name.slice( 1 ).replace( ' ', '_' ) %>",
	"authors": [
		{
			"name": "<%= author_name %>",
			"email": "<%= author_email %>"
		}
	],
	"autoload": {
		"classmap": ["src/"]
	},
	"require": {
		"php": ">=5.3.3"
	},
	"require-dev": {
		<%= deps.map( function ( dep ) { return '"' + dep.name + '": "' + dep.version + '"'; } ).join( ',\n\t\t' ) %>
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit $PHPUNIT_ARGS",
			"phpcs -p -s"
		]
	}
}
